<%= render :partial => 'admin/shared/configuration_menu' %>

<h1><%= t("ext_static_content_editing_page") %></h1>
<%= error_messages_for :page %>

<% form_for(:page, :url => object_url, :html => { :method => :put }) do |f| -%>
  <%= render :partial => "form", :locals => { :f => f } %>
  <div id="selected-taxons">
    <%= render :partial => "taxon_table", :locals => {:taxons => @taxons}%>
  </div>
  <%= render :partial => "taxon_selector", :locals => {:f => f} %>
  <p>
    <%=submit_tag t("update"), {"class" => "wymupdate"}%> <%= t("or") %> <%= link_to t("cancel"), admin_pages_path%>
  </p>
<% end %>
